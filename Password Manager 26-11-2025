password_manager = {'roblox' : '1234', 
'youtube' : '1423'}
oplist = ['1. Add new info', '2. View a certain password', '3. View all websites and passwords', '4. Update a password']
quit = 'n'

def newinfo(password_manager):
    newwebsite = input('Whats the name of the website?: ')
    newpassword = input('Whats the password?:  ')
    password_manager[newwebsite] = newpassword
    return f'The password for {newwebsite} is {password_manager.get(newwebsite)}'
def viewcertain(password_manager):
    certain = input('Whats the username / website? ')
    if certain not in password_manager:
        return 'Theres no username / website with that name, make sure you spelled correctly and used lower and upper case characters correctly'
    else:
        return f'The password is {(password_manager.get(certain))}'
def viewall(password_manager):
    for newwebsite, newpassword in password_manager.items():
        print(f'The website is {newwebsite} and the password is {newpassword}')
def updatepass(password_manager):
    updtpass = input('Whats the website of the password you want to update?: ')
    if updtpass not in password_manager:
        return f'{updtpass} is not in your saved websites, make sure you spelled and used lower and uppercase correctly'
    else:
        print(f'The password for {updtpass} is {password_manager.get(updtpass)}')
        new_updt_pass = input('Whats the new password?: ')
        password_manager[updtpass] = new_updt_pass
        return f'The new password for {updtpass} is {new_updt_pass}'

print('--------Welcome to password manager--------')
while quit == 'n':
    for item in oplist:
        print(item)
    op = int(input('What operation do you wish to do?: (input the number next to the operation)  '))
    if op == 1:
        print(newinfo(password_manager))
    elif op == 2:
        print(viewcertain(password_manager))
    elif op == 3:
        viewall(password_manager)
    elif op == 4:
        print(updatepass(password_manager))
    quit = input('Wanna quit? (y/n): ')
    if quit == 'y':
        break

print('Thank you for using our service :)')
print('Bye and see you again')
