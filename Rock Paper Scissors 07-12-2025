import random

list_of_choices = ['1. Rock', '2. Paper', '3. Scissors']
user_score = 0
computer_score = 0

def user_choice_text(choice):
    return ['rock', 'paper', 'scissors'][choice - 1]

def computer_choice_text(choice):
    return ['rock', 'paper', 'scissors'][choice - 1]

def decide_winner_func(user_choice, computer_choice):
    if user_choice == computer_choice:
        return 'tie'

    if (user_choice == 1 and computer_choice == 3) or \
       (user_choice == 2 and computer_choice == 1) or \
       (user_choice == 3 and computer_choice == 2):
        return 'win'
    
    return 'lose'

while user_score < 3 and computer_score < 3:
    print('Welcome to my game!')
    for item in list_of_choices:
        print(item)

    user_choice = int(input('Pick a number: '))
    print(f'You chose {user_choice_text(user_choice)}')

    computer_choice = random.randint(1, 3)
    print(f'The computer chose {computer_choice_text(computer_choice)}')

    result = decide_winner_func(user_choice, computer_choice)

    if result == 'win':
        print('You won!')
        user_score += 1
    elif result == 'lose':
        print('You lost!')
        computer_score += 1
    else:
        print('It\'s a tie!')

    print(f"Score â†’ You: {user_score}  Computer: {computer_score}")

    if input('Quit? (y/n): ') == 'y':
        break

if user_score == 3:
    print(f'ðŸ”¥ Well done! You won {user_score}/{computer_score}')
elif computer_score == 3:
    print(f'ðŸ˜¢ You lost {computer_score}/{user_score}')

print('Thanks for playing!')
